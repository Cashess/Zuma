generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  
}

model User {
  id           String @unique
  email        String
  firstName    String
  lastName     String
  profileImage String

  created DateTime @default(now())
  Order   Order[]
}

model Product {
  id          String        @id @default(uuid())
  name        String
  description String
  status      ProductStatus
  priceStat   Int
  images      String[]
  category    Category
  isFeatured  Boolean       @default(false) // Add the isFeatured field
}

enum ProductStatus {
  draft
  published
  archived
}

enum Category {
  kitchen
  electronics
  homeMadeCraft
}

model Banner {
  id          String   @id @default(uuid())
  title       String
  imageString String
  createdAt   DateTime @default(now())

  @@map("Banner") // This maps the model to the table named "Banner"
}


model Order {
  id     String @id @default(uuid())
  status String @default("pending")
  amount Int

  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  createdAt DateTime @default(now())
}
